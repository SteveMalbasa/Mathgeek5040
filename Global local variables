class Fastcar:

    awesome = True
    country = "America"

    def __init__(self, year, make, model, zerotosixtytime, horseypower):
        self.year = year
        self.make = make
        self.model = model
        self.zerotosixtytime = zerotosixtytime
        self.horseypower = horseypower
        self.tacos = []

